<div class="ui container marginTop5" id="comments-edit-form">
    <h2>Edit Comment</h2>
    <form class="ui form" action="/allPosts/<%= post_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Comment:</label>
            <textarea name="comment[text]"><%= comment.text %></textarea>
        </div>
        <button class="ui green basic button">Submit</button>
    </form>
</div>

